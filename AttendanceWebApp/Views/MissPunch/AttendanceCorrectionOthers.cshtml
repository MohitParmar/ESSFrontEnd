@{
    ViewBag.Title = "AttendanceCorrectionOthers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Controller/MissPunchCntrl.js"></script>
<script src="~/Content/DirPAgination/dirPagination.js"></script>

<style type="text/css">
    .TextBoxStyle {
        height: 25px;
    }

    .AddNew {
        float: right;
        position: relative;
    }

    .right-inner-addon {
        position: relative;
    }

        .right-inner-addon input {
            padding-right: 30px;
        }

        .right-inner-addon i {
            position: absolute;
            right: 0px;
            padding: 10px 12px;
            pointer-events: none;
        }
</style>
<div ng-app="myApp">
    <div ng-controller="MissPunchController">
        <div class="container-fluid">
            <input type="hidden" value="SS" id="releaseGroupCode" />
            <div id="InfoMessageBox"></div>
            <div id="MessageBox"></div>
            <div class="row">
                <div class="col-sm-8">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <strong>Attendance Correction - Contractual Employees only</strong>
                        </div>
                        <div class="panel-body" ng-init="initload()">
                            <div class="form-group">
                                <div class="form-group row">
                                    <div class="col-sm-3"><label>EmpUnqId:</label></div>
                                    <div class="col-sm-3">
                                        <input class="form-control" type="text" id="txtEmpCode"
                                               ng-model="N.empUnqId"
                                               ng-change="CheckEmpCodeInSCData()"
                                               required />
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        <label>Select Punch Type:</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select class="form-control" id="cmbIOflag" ng-model="N.IO" required>
                                            <option value="I">IN</option>
                                            <option value="O">OUT</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        <label>Select Correction Date:</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="right-inner-addon">
                                            <i class="fa fa-calendar"></i>
                                            <input class="form-control" type="text" id="time"
                                                   ng-model="N.time"
                                                   data-date-format="yyyy/MM/dd"
                                                   ng-change="GetTripodPunch(N)"
                                                   placeholder="Select Date"
                                                   datepicker
                                                   required>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <table class="table table-condensed" id="tblAttd">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>IN Punch</th>
                                                    <th>OUT Punch</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="pd in prdata">
                                                    <td>{{pd.attdDate|date:"dd/MM/yyyy"}}</td>
                                                    <td>{{pd.consIn|date:"dd/MM/yyyy HH:mm:ss"}}</td>
                                                    <td>{{pd.consOut|date:"dd/MM/yyyy HH:mm:ss"}}</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group row" id="divPunchTbl">
                                    <div class="col-sm-6">
                                        <label>Selected Punch is :</label>
                                        <h2>
                                            <label id="lblSelPunch"
                                                   style="background-color:yellow;color:red;font-weight:bolder;"></label>
                                        </h2>
                                    </div>
                                    <div class="col-sm-6">
                                        <table class="table table-condensed" id="tblTripod">
                                            <thead>
                                                <tr>
                                                    <th colspan="3">Select the tripod punch to be considered</th>
                                                </tr>
                                                <tr>
                                                    <th>Punch Date & Time</th>
                                                    <th>IN / OUT</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat="tp in gtpData">
                                                    <td>{{tp.punchDate|date:"dd/MM/yyyy HH:mm:ss"}}</td>
                                                    <td>{{tp.ioFlag === 'I' ? 'In' : 'Out'}}</td>
                                                    <td>
                                                        <button id="btnSelect"
                                                                class="btn btn-primary"
                                                                ng-click="SelectPunchTime('{{tp.punchDate}}','{{tp.ioFlag}}')">
                                                            Select
                                                        </button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        <label>Resaon for Attendance Punch:</label>
                                    </div>
                                    <div class="col-sm-3">
                                        <select class="form-control" id="cmbReason" ng-model="N.Reason" required>
                                            <option value="Forget to punch">Forget to punch</option>
                                            <option value="Punched but not accepted by M/C">Punched but not accepted by M/C</option>
                                            <option value="Error in the Punching Card">Error in the Punching Card</option>
                                            <option value="M/c is not working">M/c is not working</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-3">
                                        <span class="input-group-btn float-right">
                                            <button id="btnSubmit" type="button"
                                                    class="btn btn-success btn-custom"
                                                    style="text-align:right;"
                                                    value="Submit"
                                                    name="Save"
                                                    ng-click="CreateAttdCorrOther(N)">
                                                <i class="fa fa-save"></i>&nbsp;Submit
                                            </button>
                                            <button id="btnCancel"
                                                    type="button"
                                                    class="btn btn-default btn-custom"
                                                    value="Reload"
                                                    name="Reload"
                                                    ng-click="ResetView()">
                                                <i class="fa fa-refresh"></i>&nbsp;Reload
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @* Right pane start *@
                <div class="col-sm-4">
                    @*Employee list under shift uploder*@
                    <div class="panel panel-info">
                        <div class="panel-heading"><strong>Employees list under your release</strong></div>
                        <div class="panel-body">
                            <table class="table table-condensed table-striped" ng-init="GetSCEmpList()">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">EmpUnqId</th>
                                        <th style="text-align:left;">Employee Name</th>
                                    </tr>
                                    <tr>
                                        <td><input class="form-control" style="text-align: center; margin: 0; padding: 0px;" type="text" ng-model="search.empUnqId" /></td>
                                        <td>
                                            <input class="form-control" style="margin:0; padding:1px; width:275px;" type="text" ng-model="search.empName" />
                                        </td>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr dir-paginate="e in scempdata|orderBy:sortKey:reverse|filter:search|itemsPerPage:10" current-page="currentPage">
                                        <td style="text-align:center;">{{e.empUnqId}}</td>
                                        <td style="text-align:left;">{{e.empName}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
                @* Right pane End *@
            </div>
        </div>
    </div>
</div>