<div ng-app="myApp" ng-controller="MediclaimCntroller">
    <div class="container">
        <div id="MessageBox" class="table-responsive"></div>
        <div class="row">
            @* Add / Update Present Address in ESS Database *@
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><strong>Add / Update Family Details for Mediclaim Purpose</strong></div>
                    <div class="panel-body">
                        <form role="form" name="MediclaimForm" novalidate>
                            <div ng-init="GetPresentAddress()"></div>
                            <table id="myTable" class="table table-responsive table-bordered table-hover  table-striped table-condensed">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">Sr No.</th>
                                        <th style="text-align:center;">Name</th>
                                        <th style="text-align:center;">Date Of Birth</th>
                                        <th style="text-align:center;">Age</th>
                                        <th style="text-align:center;">Relation</th>
                                        <th style="text-align:center;">Gender</th>
                                        <th style="text-align:center;">Mediclaim Status</th>
                                        <th style="text-align:center;">Remarks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td style="width:50px;text-align:center;">{{itemsPerPage *(currentPage-1)+$index+1}}</td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtName" name="Name"></td>
                                        <td style="text-align:left;">
                                            <div class="right-inner-addon">
                                                <i class="icon-calendar"></i>
                                                <input class="form-control" type="text" id="dtDOB" ng-model="New.DOB" data-date-format="yyyy/MM/dd" placeholder="Date Of Birth"
                                                       ng-change="_calculateAge()" datepicker>
                                            </div>
                                        </td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtAge" name="Age" disabled="disabled"></td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtRelation" name="Relation"></td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtGender" name="Gender" disabled="disabled"> </td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtStatus" name="Status"> </td>
                                        <td style="text-align:left;"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtRemarks" name="Remarks"></td>
                                    </tr>
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <td colspan="8" style="text-align:right;">
                                            <input id="BtnCancel" type="reset" class="btn btn-default" value="Reload" ng-click="ResetView()" />
                                            <button id="btnSave" type="button" class="btn btn-success btn-custom" style="text-align:right;"
                                                    value="Submit Presenrt Address" name="Save" ng-click="UpdateAddress()">
                                                Submit Details
                                            </button>
                                        </td>
                                    </tr>
                                </tfoot>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>