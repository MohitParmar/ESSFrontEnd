@{
    ViewBag.Title = "User Manual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Controller/MasterCntrl.js"></script>

<script type="text/javascript">
    var chk = "@Session["UserRole"]";
    $(window).on('load', function () {
        if (chk === "IsUser") { $('#btnLA').show(); $('#btnEM').show(); $('#btnLC').show(); $('#btnLR').hide(); $('#btnRS').hide(); $('#btnLP').hide(); }
        if (chk === "IsReleaser") { $('#btnLA').show(); $('#btnLR').show(); $('#btnEM').show(); $('#btnLC').show(); $('#btnRS').hide(); $('#btnLP').hide(); }
        if (chk === "IsHrUser") { $('#btnLA').show(); $('#btnEM').show(); $('#btnRS').show(); $('#btnLC').show(); $('#btnLR').hide(); $('#btnLP').show(); }
        if (chk === "IsHrRelease") { $('#btnLA').show(); $('#btnLR').show(); $('#btnEM').show(); $('#btnRS').show(); $('#btnLC').show(); $('#btnLP').show(); }
    });
</script>

<div ng-app="myApp" ng-controller="MasterCntrloller">
    <div class="container">
        <div class="row" id="div_Main">
            <div class="col-sm-12">
                <div class="panel panel-default">
                    <div class="panel-heading"><strong>User Manuals</strong></div>
                    <div class="panel-body">
                        <button class="btn btn-info" ng-click="LoadDiv('LA')" id="btnLA">Leave Application</button>
                        <button class="btn btn-info" ng-click="LoadDiv('LC')" id="btnLC">Leave Cancellation</button>
                        <button class="btn btn-info" ng-click="LoadDiv('LR')" id="btnLR">Leave Release</button>
