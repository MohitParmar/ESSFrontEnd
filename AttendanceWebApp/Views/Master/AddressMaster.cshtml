@{
    ViewBag.Title = "Update Present Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Angular/AngularJSv1.2.0-rc.3.js"></script>
<script src="~/Scripts/Module/ng-table.src.js"></script>
<script src="~/Scripts/Module/ng-tags-input.js"></script>
<script src="~/Scripts/Module/app.js"></script>
<link href="~/Content/ng-table.css" rel="stylesheet" media="screen" />
<link href="~/Content/ng-table.min.css" rel="stylesheet" media="screen" />
<script src="~/Scripts/Controller/HomeCntrl.js"></script>
<script src="~/Content/DirPAgination/dirPagination.js"></script>

<div ng-app="myApp" ng-controller="HomeCntrloller">
    <div class="container">
        <div id="MessageBox" class="table-responsive"></div>
        <div class="row">
            @* Add / Update Present Address in ESS Database *@
            <div class="col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><strong>Add / Update Present Address</strong></div>
                    <div class="panel-body">
                        <form role="form" name="AddressForm" novalidate>
                            <div ng-init="GetPresentAddress()"></div>
                            <table id="myTable" class="table table-responsive table-condensed">
                                <tbody>
                                    <tr>
                                        <td><label>Address 1</label></td>
                                        <td colspan="3"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtadd1" name="add1" required></td>
                                    </tr>
                                    <tr>
                                        <td><label>Address 2</label></td>
                                        <td colspan="3"><input class="form-control" style="text-transform: uppercase;" type="text" id="txtadd2" name="add2" required></td>
                                    </tr>
                                    <tr>
                                        <td><label>Village</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="text" id="txtvlg" name="vlg" required></td>
                                        <td><label>Taluka</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="text" id="txttlk" name="tlk" required></td>
                                    </tr>
                                    <tr>
                                        <td><label>City</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="text" id="txtcity" name="city"></td>
                                        <td><label>District</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="text" id="txtdist" name="dist" value="KUTCH"></td>
                                    </tr>
                                    <tr>
                                        <td><label>State</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="text" id="txtstate" name="State" value="GUJARAT"></td>
                                        <td><label>PinCode.</label></td>
                                        <td><input class="form-control" style="text-transform: uppercase;" type="number" id="pincode" name="pincode" required></td>
                                    </tr>
                                    <tr>
                                        <td><label>Mobile No.</label></td>
                                        <td><input class="form-control" type="number" id="txtphoneno" name="phoneno" required></td>
                                        <td><label>Alternate Mobile No.</label></td>
                                        <td><input class="form-control" type="number" id="txtresno" name="resno"></td>
                                    </tr>
                                    <tr>
                                        <td colspan="4" style="text-align:right;">
                                            <input id="BtnCancel" type="reset" class="btn btn-default" value="Reset" ng-click="ResetView()" />
                                            <button id="btnSave" type="button" class="btn btn-success btn-custom" style="text-align:right;"
                                                    value="Submit Presenrt Address" name="Save" ng-click="UpdateAddress()">
                                                Submit Address Details
                                            </button>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
            @* Permanent Address Details *@
            <div class="col-sm-4">
                <div class="panel panel-info">
                    <div class="panel-heading"><strong>Permanent Address Details</strong></div>
                    <div class="panel-body">
                        <div class="table-responsive">
                            <div ng-init="GetUserPerasonalInfo()">
                                <table class="table table-bordered table-condensed table-responsive table-striped">
                                    <tbody ng-repeat="p in Uperdata">
                                        <tr><td>Address1</td><td>{{p.perAdd1}}</td></tr>
                                        <tr><td>Address2</td><td>{{p.perAdd2}}</td></tr>
                                        <tr><td>Address3</td><td>{{p.perAdd3}}</td></tr>
                                        <tr><td>Address4</td><td>{{p.perAdd4}}</td></tr>
                                        <tr><td>City</td><td>{{p.perCity}}</td></tr>
                                        <tr><td>District</td><td>{{p.perDistrict}}</td></tr>
                                        <tr><td>State</td><td>{{p.perState}}</td></tr>
                                        <tr><td>Pincode</td><td>{{p.perPin}}</td></tr>
                                        <tr><td>Mobile No</td><td>{{p.perPhone}}</td></tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>