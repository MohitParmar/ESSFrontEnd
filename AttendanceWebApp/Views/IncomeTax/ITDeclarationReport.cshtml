                                            </tr>
                                            <tr>
                                                <td colspan="2"></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.TaxRegime" />
                                                </td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.SapID" />
                                                </td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.Name" />
                                                </td>
                                                <td colspan="32"></td>
                                                <td></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.CodeNo" />
                                                </td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.EmpName" />
                                                </td>
                                                <td colspan="4"></td>
                                                <td></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.SapId_2" />
                                                </td>
                                                <td colspan="9"></td>
                                                <td></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.SapId_3" />
                                                </td>
                                                <td colspan="6"></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.BankName" />
                                                </td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.PANNO" />
                                                </td>
                                                <td></td>
                                                <td></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.SapId_1" />
                                                </td>
                                                <td colspan="2"></td>
                                                <td>
                                                    <input class="form-control" style="margin:0;padding:1px;" type="text" ng-model="search.Acco_Type" />
                                                </td>
                                                <td colspan="7"></td>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="d in itddata|orderBy:sortKey:reverse|filter:search|itemsPerPage:50" current-page="currentPage">
                                                <td style="text-align:center;">{{itemsPerPage *(currentPage-1)+$index+1}}</td>
                                                <td style="text-align:center;"><input type="checkbox" ng-checked="{{d.Actual}}" disabled="disabled" /></td>
                                                <td style="text-align:center;">{{d.TaxRegime}}</td>
                                                <td style="text-align:center;">{{d.SapID}}</td>
                                                <td style="text-align:left;">{{d.Name}}</td>
                                                <td style="text-align:center;">{{d.StartDate}}</td>
                                                <td style="text-align:center;">{{d.EndDate}}</td>
                                                <td style="text-align:center;">{{d.LIC_Code}}</td>
                                                @* LIC *@
                                                <td style="text-align:center;">{{d.LIC_Pro}}</td>
                                                <td style="text-align:center;">{{d.LIC_Act}}</td>
                                                <td style="text-align:center;">{{d.ULIP_Code}}</td>
                                                @* Contribution to ULIP *@
                                                <td style="text-align:center;">{{d.ULIP_Pro}}</td>
                                                <td style="text-align:center;">{{d.ULIP_Act}}</td>
                                                <td style="text-align:center;">{{d.MutualFund_Code}}</td>
                                                @*Subscription to approved mutual fund (Infrastructure)*@
                                                <td style="text-align:center;">{{d.MutualFund_Pro}}</td>
                                                <td style="text-align:center;">{{d.MutualFund_Act}}</td>
                                                <td style="text-align:center;">{{d.PPF_Code}}</td>
                                                @*Contribution to Public Provident Fund*@
                                                <td style="text-align:center;">{{d.PPF_Pro}}</td>
                                                <td style="text-align:center;">{{d.PPF_Act}}</td>
                                                <td style="text-align:center;">{{d.NSC_Code}}</td>
                                                @*Subscr to notified Central Govmt Savings certificate (NSC VIII issue)*@
                                                <td style="text-align:center;">{{d.NSC_Pro}}</td>
                                                <td style="text-align:center;">{{d.NSC_Act}}</td>
                                                <td style="text-align:center;">{{d.HousingLoan_Code}}</td>
                                                @*Repayment of Housing loan*@
                                                <td style="text-align:center;">{{d.HousingLoan_Pro}}</td>
                                                <td style="text-align:center;">{{d.HousingLoan_Act}}</td>
                                                <td style="text-align:center;">{{d.Notified_M_Fund_Code}}</td>
                                                @*Subscription to notified mutual fund*@
                                                <td style="text-align:center;">{{d.Notified_M_Fund_Pro}}</td>
                                                <td style="text-align:center;">{{d.Notified_M_Fund_Act}}</td>
                                                <td style="text-align:center;">{{d.TutionFee_Child1_Code}}</td>
                                                @*Tuition fee - child 1*@
                                                <td style="text-align:center;">{{d.TutionFee_Child1_Pro}}</td>
                                                <td style="text-align:center;">{{d.TutionFee_Child1_Act}}</td>
                                                <td style="text-align:center;">{{d.TutionFee_Child2_Code}}</td>
                                                @*Tuition fee - child 2*@
                                                <td style="text-align:center;">{{d.TutionFee_Child2_Pro}}</td>
                                                <td style="text-align:center;">{{d.TutionFee_Child2_Act}}</td>
                                                <td style="text-align:center;">{{d.TermDeposit_Code}}</td>
                                                @*Term Deposits under Section 80C*@
                                                <td style="text-align:center;">{{d.TermDeposit_Pro}}</td>
                                                <td style="text-align:center;">{{d.TermDeposit_Act}}</td>
                                                <td style="text-align:center;">{{d.b_1}}</td>
                                                <td style="text-align:center;">{{d.CodeNo}}</td>
                                                <td style="text-align:left;">{{d.EmpName}}</td>
                                                <td style="text-align:center;">{{d.Total80C}}</td>
                                                <td style="text-align:center;">{{d.Provisional}}</td>
                                                <td style="text-align:center;">{{d.Total}}</td>
                                                <td style="text-align:center;">{{d.Diff}}</td>
                                                <td style="text-align:center;">{{d.b_2}}</td>
                                                <td style="text-align:center;">{{d.SapId_2}}</td>
                                                <td style="text-align:center;">{{d.LongTermMutualFund}}</td>
                                                @* 80CCF& 80d *@
                                                <td style="text-align:center;">{{d.RajivGandhiEquity}}</td>
                                                <td style="text-align:center;">{{d.MedicalPremiumSelf}}</td>
                                                <td style="text-align:center;">{{d.MedicalPremiumParents}}</td>
                                                <td style="text-align:center;">{{d.MedicalPreventiveHealthCheckup}}</td>
                                                <td style="text-align:center;">{{d.EduLoanInterest}}</td>
                                                <td style="text-align:center;">{{d.PhysicalDisability}}</td>
                                                <td style="text-align:center;">{{d.SevereDisability}}</td>
                                                <td style="text-align:center;">{{d.NPS}}</td>
                                                <td style="text-align:center;">{{d.b_3}}</td>
                                                <td style="text-align:center;">{{d.SapId_3}}</td>
                                                <td style="text-align:center;">{{d.StartDate_2}}</td>
