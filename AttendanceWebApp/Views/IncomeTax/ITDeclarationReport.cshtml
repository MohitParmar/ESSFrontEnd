                                                <td style="text-align:center;">{{d.EndDate_1}}</td>
                                                <td style="text-align:center;">{{d.Acco_Type}}</td>
                                                <td style="text-align:center;">{{d.CityCategory}}</td>
                                                <td style="text-align:center;">{{d.RentPerMonth}}</td>
                                                <td style="text-align:center;">{{d.RentPaid}}</td>
                                                <td style="text-align:center;">{{d.HRA_Exempted}}</td>
