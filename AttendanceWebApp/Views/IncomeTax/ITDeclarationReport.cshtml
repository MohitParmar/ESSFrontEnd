                                                <td style="text-align:center;">{{d.InterestPreConstruction}}</td>
                                                <td style="text-align:center;">{{d.NationalRent}}</td>
                                                <td style="text-align:center;">{{d.Net}}</td>
                                                <td style="text-align:left;">{{d.BankName}}</td>
                                                <td style="text-align:center;">{{d.PANNO}}</td>
                                                <td style="text-align:center;">{{d.Others}}</td>
