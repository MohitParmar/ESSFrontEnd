                                                <th colspan="3" style="text-align:center;">Subscription to notified mutual fund</th>
                                                <th colspan="3" style="text-align:center;">Tuition fee - child 1</th>
                                                <th colspan="3" style="text-align:center;">Tuition fee - child 2</th>
                                                <th colspan="3" style="text-align:center;">Term Deposits under Section 80C</th>
                                                <th></th>
                                                <th colspan="6"></th>
                                                <th></th>
                                                <th colspan="10" style="text-align:center;">80CCF & 80d</th>
                                                <th></th>
                                                <th colspan="10" style="text-align:center;">Int on House Loan</th>
                                                <th colspan="1"></th>
                                                <th colspan="10" style="text-align:center;">HRA</th>
                                                <th style="text-align:center;">Lock</th>
                                            </tr>
                                            <tr>
                                                <th>Sr No.</th>
                                                <th>Actual</th>
                                                <th>Tax Regime</th>
                                                <th style="text-align:center;" ng-click="sort('SapID')">
                                                    Sap ID
                                                    <span class="glyphicon sort-icon" ng-show="sortKey=='SapID'"
                                                          ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                                </th>
                                                <th style="text-align:center;">Name</th>
                                                <th style="text-align:center;">Start Date</th>
                                                <th style="text-align:center;">End Date</th>
                                                <th style="text-align:center;">Investment Code</th>
                                                <th style="text-align:center;">Provisional</th>
                                                <th style="text-align:center;">Actual Amount</th>
                                                <th style="text-align:center;">Investment Code</th>
                                                <th style="text-align:center;">Provisional</th>
                                                <th style="text-align:center;">Actual Amount</th>
