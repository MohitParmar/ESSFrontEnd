@{
    ViewBag.Title = "Outdoor Duty Application";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/Angular/AngularJSv1.2.0-rc.3.js"></script>
<script src="~/Scripts/Module/ng-table.src.js"></script>
<script src="~/Scripts/Module/ng-tags-input.js"></script>
<script src="~/Scripts/Module/app.js"></script>
<link href="~/Content/ng-table.css" rel="stylesheet" media="screen" />
<link href="~/Content/ng-table.min.css" rel="stylesheet" media="screen" />
<script src="~/Scripts/Controller/ODCntrl.js"></script>
<script src="~/Content/DirPAgination/dirPagination.js"></script>
<script src="~/Scripts/Controller/MasterCntrl.js"></script>

<style type="text/css">
    .TextBoxStyle {
        height: 25px;
    }

    .AddNew {
        float: right;
        position: relative;
    }

    .right-inner-addon {
        position: relative;
    }

        .right-inner-addon input {
            padding-right: 30px;
        }

        .right-inner-addon i {
            position: absolute;
            right: 0px;
            padding: 10px 12px;
            pointer-events: none;
        }
</style>

<div ng-app="myApp" ng-controller="ODController">
    <div class="container">
        <input type="hidden" value="OD" id="releaseGroupCode" />
        <div id="MessageBox" class="table-responsive"></div>
        <div class="row">
            @* Release Strategy *@
            <div class="col-sm-12">
                <div ng-init="GetRelesaseStratey()">
                    <div class="table-responsive">
                        <table class="table table-condensed table-" style="text-align:center;">
                            <tr>
                                <td ng-repeat="rls in rlsdata.releaseStrategyLevels">
                                    <b> Releasear  {{rls.releaseStrategyLevel}}  :  {{rls.empName}} </b>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
            @* Create Leave Application *@
            <div class="col-sm-8">
                <div class="panel panel-default">
                    <div class="panel-heading"><strong>OUTDOOR DUTY (OFFICIAL / PERSONAL) </strong></div>
                    <div class="panel-body">
                        <form role="form" name="LeaveForm" novalidate style="margin-bottom:0px;">
                            <div class="table-responsive">
                                <table id="myTable" class="table table-responsive table-condensed">
                                    <tr>
                                        <td style="text-align:center;"><label>From Date</label></td>
                                        <td style="text-align:center;">
                                            <div class="right-inner-addon">
                                                <i class="icon-calendar"></i>
                                                <input class="form-control" type="text" id="FromDt" ng-model="New.FromDt" data-date-format="yyyy/MM/dd"
                                                       placeholder="Select From Date" datepicker required>
                                            </div>
                                        </td>
                                        <td style="text-align:center;"><label>To Date</label></td>
                                        <td style="text-align:center;">
                                            <div class="right-inner-addon">
                                                <i class="icon-calendar"></i>
                                                <input class="form-control" type="text" id="ToDt" ng-model="New.ToDt" data-date-format="yyyy/MM/dd" ng-change="ToValidate()"
                                                       placeholder="Select To Date" datepicker required>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;"><label>Leave Type</label></td>
                                        <td style="text-align:center;">
                                            <input class="form-control" type="text" id="LeaveTypeCode" name="LeaveTypeCode" value="OD" readonly>
                                        </td>
                                        <td style="text-align:center;width:70px"><label>Total Days</label></td>
                                        <td><input class="form-control" type="text" id="TotalDays" name="TotalDays" readonly></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;"><label>Place Of Visit</label></td>
                                        <td colspan="3">
                                            <input class="form-control" type="text" id="Place" name="Place" ng-model="New.Place" placeholder="Place Of Visit.." required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:center;"><label>CONTACT ADDRESS / TELEPHONE NO. <br /> (IF ANY): </label></td>
                                        <td colspan="3">
                                            <textarea class="form-control" type="text" id="ContactDetails" name="ContactDetails" ng-model="New.Details" placeholder="Write Here.."
                                                      required></textarea>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;" colspan="5">
                                            <input id="BtnCancel" type="reset" class="btn btn-default" value="Reset" ng-click="ResetView()" />
                                            <button id="BtnSave" type="submit" class="btn btn-success btn-custom" style="text-align:right;" value="Final Submit" name="Save"
                                                    ng-click='createOD(New)'>
                                                Create OD Application
                                            </button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            @* Right Side Bar *@
            <div class="col-sm-4">
                @* Leave Balance List *@
                <div class="panel panel-info">
                    <div class="panel-heading"><strong>Leave Balance</strong></div>
                    <div class="panel-body">
                        <div ng-app="myApp" ng-controller="MasterCntrloller" ng-init="GetLeave()">
                            <div class="table-responsive">
                                <table id="tbl" data-show-filter="true" class="table table-hover table-bordered table-condensed table-striped">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Type</th>
                                            <th style="text-align:center;">Open</th>
                                            <th style="text-align:center;">Availed</th>
                                            <th style="text-align:center;">Encashed</th>
                                            <th style="text-align:center;">Balance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="d in data">
                                            <td style="text-align:center;" data-title="'Leave Type'" id="LeaveTypeCode">{{d.leaveTypeCode}}</td>
                                            <td style="text-align:center;" data-title="'Open'" id="Opening">{{d.opening}}</td>
                                            <td style="text-align:center;" data-title="'Availed'" id="Availed">{{d.availed}}</td>
                                            <td style="text-align:center;" data-title="'Encashed'" id="Encashed">{{d.encashed}}</td>
                                            <td style="text-align:center;" data-title="'Balance'" id="Balance">{{d.opening-d.availed}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                @* Holiday List Of Current User *@
                <div class="panel panel-info">
                    <div class="panel-heading"><strong>Holiday List</strong></div>
                    <div class="panel-body">
                        <div ng-app="myApp" ng-controller="MasterCntrloller" ng-init="ListOfholiday()">
                            <div class="table-responsive">
                                <table id="tbl" data-show-filter="true" class="table table-hover table-bordered table-condensed table-striped">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center;">Date</th>
                                            <th style="text-align:center;">Festival Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="hld in hlddata">
                                            <td style="text-align:center;" data-title="'Holiday Date'" id="holidayDate">{{hld.holidayDate | date:'dd/MM/yyyy'}}</td>
                                            <td style="text-align:Left;" data-title="'Holiday Name'" id="holidayName">{{hld.holidayName}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @* End Side Bar *@
        </div>
    </div>
</div>