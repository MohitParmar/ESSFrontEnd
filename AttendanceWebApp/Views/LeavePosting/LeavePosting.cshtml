                                                        <th style="text-align:center;padding:3px;width:34px;">Days</th>
                                                        <th style="text-align:center;padding:3px;width:34px;">Half Day</th>
                                                        <th style="text-align:center;padding:3px;width:64px;">Posting</th>
                                                    </tr>
                                                </table>
                                            </th>
                                            <th style="text-align:center;padding:3px;">Remarks</th>
                                            <th style="text-align:center;padding:3px;width:122px;">Action</th>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td><input class="form-control" type="text" ng-model="search.employee" style="margin:0;padding:1px;width:50px;" /></td>
                                            <td colspan="3"></td>
                                            <td><input class="form-control" type="text" ng-model="search.empUnqId" style="margin:0;padding:1px;width:50px;" /></td>
                                            <td></td>
                                            <td><input class="form-control" type="text" ng-model="search.stations" style="margin:0;padding:1px;" /></td>
                                            <td colspan="4"></td>
                                        </tr>
                                    </thead>
                                    <tbody dir-paginate="d in lappdata|orderBy:sortKey:reverse|filter:search|itemsPerPage:25" current-page="currentPage" pagination-id="pg2">
                                        <tr>
                                            @* ng-style="d.cancelled === true && {'background-color':'#F8EFBA','color':'black'}" *@
                                            @*<td><table><tr ng-repeat="ld in d.leaveApplicationDetails"><td><input type="checkbox" name="chkbox[]" value="{{d.leaveAppId}},{{ld.leaveAppItem}}" /></td></tr></table></td>*@
                                            <td style="text-align:center;">{{itemsPerPage *(currentPage-1)+$index+1}}</td>
                                            <td style="text-align:center;padding:3px;" id="location" ng-repeat="l in d.employee  track by $index" ng-if="$index==24"
