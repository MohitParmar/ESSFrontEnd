@{
    ViewBag.Title = "DependentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/DirPAgination/dirPagination.js"></script>
<script src="~/Scripts/Controller/MCCntrl.js"></script>

<div ng-app="myApp" ng-controller="MCController">
    <div class="container-fluid">
        <input type="hidden" value="MC" id="releaseGroupCode" />
        <div id="MessageBox" class="table-responsive"></div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <strong>Dependent Details</strong>
                        <div style="float:right;">
                            <a style="float: right;" href="#" ng-click="exportAllData('AllDependentDetails_')">
                                <img src="~/ESS_Images/excel.ico" style="width: 30px; height: 30px;" alt="Export To Excel" />
                            </a>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div style="text-align: center;">
                            <img id="loading" src="~/ESS_Images/ajax-loader.gif" alt="Loading..." class="deactivediv">
                        </div>
                        <div class="table-responsive" ng-init="GetDependentDetails('true')">
                            <table class="table table-responsive table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">Sr No.</th>
                                        <th style="text-align:center;" ng-click="sort('ApplicationDate')">
                                            Application Date
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='ApplicationDate'"
                                                  ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('ReleaseDate')">
                                            Release Date
                                            <span class="glyphicon sort-icon" ng-show="sortKey=='ReleaseDate'"
                                                  ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('EmpCode')">
                                            EmpUnqId<span class="glyphicon sort-icon" ng-show="sortKey=='EmpCode'"
                                                          ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('DepSr')">
                                            Dependent Sr No.<span class="glyphicon sort-icon" ng-show="sortKey=='DepSr'"
                                                                  ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:left;" ng-click="sort('DepName')">
                                            Dependent Name<span class="glyphicon sort-icon" ng-show="sortKey=='DepName'"
                                                                ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:left;" ng-click="sort('Relation')">
                                            Relation<span class="glyphicon sort-icon" ng-show="sortKey=='Relation'"
                                                          ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('BirthDate')">
                                            Date of Birth<span class="glyphicon sort-icon" ng-show="sortKey=='BirthDate'"
                                                               ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('Gender')">
                                            Gender<span class="glyphicon sort-icon" ng-show="sortKey=='Gender'"
                                                        ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:left;" ng-click="sort('PAN')">
                                            PAN<span class="glyphicon sort-icon" ng-show="sortKey=='PAN'"
                                                     ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:left;" ng-click="sort('Aadhar')">
                                            AADHAR<span class="glyphicon sort-icon" ng-show="sortKey=='Aadhar'"
                                                        ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:left;" ng-click="sort('BirthCertificateNo')">
                                            Birth Certiificate No<span class="glyphicon sort-icon" ng-show="sortKey=='BirthCertificateNo'"
                                                                       ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('EffectiveDate')">
                                            Effective Date<span class="glyphicon sort-icon" ng-show="sortKey=='EffectiveDate'"
                                                                ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                        <th style="text-align:center;" ng-click="sort('Uhid')">
                                            UHID No<span class="glyphicon sort-icon" ng-show="sortKey=='Uhid'"
                                                         ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
                                        </th>
                                    </tr>
                                    <tr>
                                        <td colspan="3"></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.EmpCode" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.DepSr" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.DepName" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.Relation" /></td>
                                        <td></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.Gender" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.Pan" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.Aadhar" /></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.BirthCertificateNo" /></td>
                                        <td></td>
                                        <td><input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.Uhid" /></td>
                                    </tr>
                                </thead>
                                <tbody dir-paginate="d in DepArr|orderBy:sortKey:reverse|filter:search|itemsPerPage:50" current-page="currentPage">
                                    <tr>
                                        <td style="text-align:center;">{{itemsPerPage *(currentPage-1)+$index+1}}</td>
                                        <td style="text-align:center;">{{d.ApplicationDate| date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:center;">{{d.ReleaseDate| date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:center;">{{d.EmpCode}}</td>
                                        <td style="text-align:center;">{{d.DepSr}}</td>
                                        <td style="text-align:left;">{{d.DepName}}</td>
                                        <td style="text-align:left;">{{d.Relation}}</td>
                                        <td style="text-align:center;">{{d.BirthDate | date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:center;">{{d.Gender}}</td>
                                        <td style="text-align:left;">{{d.PAN}}</td>
                                        <td style="text-align:left;">{{d.Aadhar}}</td>
                                        <td style="text-align:left;">{{d.BirthCertificateNo}}</td>
                                        <td style="text-align:center;">{{d.EffectiveDate | date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:left;">{{d.Uhid}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
