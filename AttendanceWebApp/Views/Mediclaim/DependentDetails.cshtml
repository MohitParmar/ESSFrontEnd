@{
    ViewBag.Title = "DependentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Content/DirPAgination/dirPagination.js"></script>
<script src="~/Scripts/Controller/MCCntrl.js"></script>

<div ng-app="myApp" ng-controller="MCController">
    <div class="container-fluid">
        <input type="hidden" value="MC" id="releaseGroupCode" />
        <div id="MessageBox" class="table-responsive"></div>
        <div class="row">
            <div class="col-sm-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <strong>Dependent Details</strong>
                    </div>
                    <div class="panel-body">
                        <div style="text-align: center;">
                            <img id="loading" src="~/ESS_Images/ajax-loader.gif" alt="Loading..." class="deactivediv">
                        </div>
                        <div class="table-responsive" ng-init="GetDependentDetails('true')">
                            <table class="table table-responsive table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">Sr No.</th>
                                        <th style="text-align:center;">EmpUnqId</th>
                                        <th style="text-align:center;">Dependent Sr No.</th>
                                        <th style="text-align:center;">Dependent Name</th>
                                        <th style="text-align:center;">Relation</th>
                                        <th style="text-align:center;">Date of Birth</th>
                                        <th style="text-align:center;">Gender</th>
                                        <th style="text-align:center;">PAN</th>
                                        <th style="text-align:center;">AADHAR</th>
                                        <th style="text-align:center;">Birth Certiificate No</th>
                                        <th style="text-align:center;">Effective Date</th>
                                        <th style="text-align:center;">UHID No</th>
                                    </tr>
                                    <tr>
                                        <td></td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.empUnqId" />
                                        </td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.depSr" />
                                        </td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.depName" />
                                        </td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.relation" />
                                        </td>
                                        <td colspan="2"></td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.pan" />
                                        </td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.aadhar" />
                                        </td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.birthCertificateNo" />
                                        </td>
                                        <td></td>
                                        <td>
                                            <input class="form-control" style="margin: 0; padding: 1px;" type="text" ng-model="search.uhIds" />
                                        </td>
                                    </tr>
                                </thead>
                                <tbody dir-paginate="d in depData|orderBy:sortKey:reverse|filter:search|itemsPerPage:50" current-page="currentPage">
                                    <tr>
                                        <td style="text-align:center;">{{itemsPerPage *(currentPage-1)+$index+1}}</td>
                                        <td style="text-align:center;">{{d.empUnqId}}</td>
                                        <td style="text-align:center;">{{d.depSr}}</td>
                                        <td style="text-align:left;">{{d.depName}}</td>
                                        <td style="text-align:center;">{{d.relation}}</td>
                                        <td style="text-align:center;">{{d.birthDate | date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:center;">{{d.gender}}</td>
                                        <td style="text-align:center;">{{d.pan}}</td>
                                        <td style="text-align:center;">{{d.aadhar}}</td>
                                        <td style="text-align:center;">{{d.birthCertificateNo}}</td>
                                        <td style="text-align:center;">{{d.effectiveDate | date:'dd/MM/yyyy'}}</td>
                                        <td style="text-align:center;"><table><tr ng-repeat="e in d.uhIds"><td>{{e.uhid}}</td></tr></table></td>
                                    </tr>
                                </tbody>
                            </table>
                            <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
