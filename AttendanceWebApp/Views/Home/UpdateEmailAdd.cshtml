@{
    ViewBag.Title = "Update Email Address";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Controller/HomeCntrl.js"></script>
<script src="~/Content/DirPAgination/dirPagination.js"></script>
<div ng-app="myApp" ng-controller="HomeCntrloller">
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="MessageBox" class="table-responsive"></div>
                @* Add / Update Email Address in ESS Database *@
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong>Update Email Id</strong>
                    </div>
                    <div class="panel-body">
                        <div ng-init="GetUserInfo()">
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered table-condensed">
                                    <tr dir-paginate="d in Udata|itemsPerPage:5">
                                        <th>Employee Code </th>
                                        <td>
                                            <b>{{d.empUnqId}}</b>
                                        </td>
                                        <th>Employee Name </th>
                                        <td>
                                            <b>{{d.empName}}</b>
                                        </td>
                                        <th>Email ID </th>
                                        <td>
                                            <b>{{d.email}}</b>
                                        </td>
                                    </tr>
                                </table>
                                <dir-pagination-controls max-size="5" direction-links="true" boundary-links="true"></dir-pagination-controls>
                            </div>
                        </div>
                        <form role="form" name="LeaveForm" novalidate>
                            <table id="myTable" class="table table-responsive">
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="input-group form">
                                                <input class="form-control" type="email" id="eMailID" name="eMailID" ng-model="New.eMailID" placeholder="Enter Email Address ex : abc@gmail.com" required>
                                                <span class="input-group-btn">
                                                    <button id="btnSave" type="button" class="btn btn-primary btn-custom" style="text-align:right;" value="Notification Email ID"
                                                            name="Save" ng-click="EmpeMail(New)">
                                                        Update Email ID
                                                    </button>
                                                </span>
                                            </div>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>